<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:theme="@style/AppTheme">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

            <tkhub.project.mscoba.MyClass.Font.FontHedar
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="CONTACT "
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/myWhite" />

            <RelativeLayout
                android:id="@+id/layout_navigation"
                android:layout_width="40dip"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">


                <com.balysv.materialmenu.MaterialMenuView
                    android:id="@+id/action_bar_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    app:mm_color="@android:color/white" />


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout_map">

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
                    android:name="com.google.android.gms.maps.SupportMapFragment"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/relativeLayout_contactdetils">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:background="#CCFFFFFF">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dip"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeLayout34">

                        <RelativeLayout
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:id="@+id/relativeLayoutPhone"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/relativeLayout37"
                            android:layout_toStartOf="@+id/relativeLayout37">


                            <tkhub.project.mscoba.MyClass.Font.TextViewFontAwesome
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_landphoe"
                                android:id="@+id/textView41"
                                android:textSize="40sp"
                                android:textColor="@color/colorPrimary"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="2dip"
                            android:layout_height="match_parent"
                            android:background="@color/myBlack"
                            android:id="@+id/relativeLayout37"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/relativeLayoutAddress"
                            android:layout_toStartOf="@+id/relativeLayoutAddress"
                            android:layout_marginTop="5dip"
                            android:layout_marginBottom="5dip"></RelativeLayout>

                        <RelativeLayout
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:id="@+id/relativeLayoutAddress">


                            <tkhub.project.mscoba.MyClass.Font.TextViewFontAwesome
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_building"
                                android:id="@+id/textView42"
                                android:textSize="40sp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/myBlack" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="2dip"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/relativeLayoutAddress"
                            android:layout_toEndOf="@+id/relativeLayoutAddress"
                            android:background="@color/myBlack"
                            android:id="@+id/relativeLayout39"
                            android:layout_marginTop="5dip"
                            android:layout_marginBottom="5dip"></RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relativeLayoutWeb"
                            android:layout_width="100dip"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_toRightOf="@+id/relativeLayout39"
                            android:layout_toEndOf="@+id/relativeLayout39">



                            <tkhub.project.mscoba.MyClass.Font.TextViewFontAwesome
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/icon_email"
                                android:id="@+id/textView43"
                                android:textSize="40sp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/myBlack" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dip"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/relativeLayout35"
                        android:layout_above="@+id/relativeLayout34">

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="+94 312 224 657"
                            android:id="@+id/textView_phone"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true" />

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="+94 773 225 900"
                            android:id="@+id/textView_phone_two"
                            android:layout_below="@+id/textView_phone"
                            android:layout_centerHorizontal="true" />

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Mudalidu Mendis Mawatha,"
                            android:id="@+id/textView_address_two"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone" />

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="15/3,"
                            android:id="@+id/textView_address_one"
                            android:layout_above="@+id/textView_address_two"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone" />

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Negombo"
                            android:id="@+id/textView_address_three"
                            android:layout_below="@+id/textView_address_two"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone" />

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Sri Lanka"
                            android:id="@+id/textView_address_four"
                            android:layout_below="@+id/textView_address_three"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone" />

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="www.marisstellaoba.com"
                            android:id="@+id/textView_web"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone" />

                        <tkhub.project.mscoba.MyClass.Font.FontHedar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="info@marisstellaoba.com"
                            android:id="@+id/textView_email"
                            android:layout_below="@+id/textView_web"
                            android:layout_centerHorizontal="true"
                            android:visibility="gone" />
                    </RelativeLayout>

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/Relative_TitleBar"
        android:layout_gravity="start"
        android:background="#cc3F51B5"
        android:clickable="false">



        <ListView
            android:id="@+id/listView_navigation"
            android:layout_marginTop="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:divider="@color/myBlue" />
    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>

